    }
    if (
      argentinaFull &&
      exteriorFull &&
      monthlyArgentinaFull &&
      monthlyExteriorFull
    ) {
      argentinaFull.classList.remove("line-through");
      exteriorFull.classList.remove("line-through");
      monthlyArgentinaFull.classList.remove("line-through");
